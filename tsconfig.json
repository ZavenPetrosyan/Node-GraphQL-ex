{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "pretty": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "target": "es2017",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "lib": [
      "es2017",
      "es6",
      "es5",
      "dom"
    ],
  },
  "exclude": [
    "node_modules",
    "node_modules/**"
  ],
  "compileOnSave": true
}